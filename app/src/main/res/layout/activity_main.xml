<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8520232F"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="1000dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:foregroundGravity="left"
        android:padding="0dp"
        android:src="@drawable/logo" />

    <ImageView
        android:layout_width="916px"
        android:layout_height="916px"
        android:layout_alignParentStart="true"
        android:src="@drawable/sprite" />

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothampro_bold"
            android:text="магазин"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="29sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_marginTop="19dp"
        android:layout_marginEnd="23dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_balance_tittle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothampro_light"
                android:text="баланс"
                android:textAllCaps="true"
                android:textColor="#50FFFFFF"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothampro_bold"
                android:text="10 000"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tv_balance_tittle" />

            <ImageView
                android:id="@+id/tv_az_coin"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_icon"
                app:layout_constraintBottom_toBottomOf="@id/tv_balance"
                app:layout_constraintLeft_toRightOf="@id/tv_balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gothampro_bold"
                android:text="coins"
                android:textAllCaps="true"
                android:textColor="#50ffcb5a"
                android:textSize="6sp"
                app:layout_constraintLeft_toRightOf="@id/tv_az_coin"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="56px"
            android:background="@drawable/donate_button"
            android:fontFamily="@font/gothampro_medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Пополнить счёт"
            android:textAllCaps="false"
            android:textColor="#FFCB5A"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="65px"
            android:src="@drawable/ic_x" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_below="@id/wrapper"
        android:layout_marginTop="13dp"
        android:background="#1AFFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100px"
            android:layout_marginRight="75px">

            <ImageView
                android:id="@+id/menu_all"
                android:layout_width="34dp"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:alpha="1"
                android:src="@drawable/ic_menu"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_box"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_box"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_money"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_money"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_car"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_car"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_diamond"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_diamond"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_casino"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_casino"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_user"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_user"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/menu_star"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:layout_marginLeft="135px"
                android:alpha="0.25"
                android:src="@drawable/ic_star"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filters"
        android:layout_marginLeft="100px"
        android:layout_marginTop="35px"
        android:fontFamily="@font/gothampro_medium"
        android:text="все"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/description"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="22dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>